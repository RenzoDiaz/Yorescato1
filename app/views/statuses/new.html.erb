<section class="create-form">
	<div class="container">
		<article class="new">
			<h3>Agregar Categoria de Extinci√≥n</h3>
			<%= form_for Status.new,:remote => true do |f| %>
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<div class="form-group">
					<%= f.text_field :name, :class => 'form-control', :placeholder => 'Nombre' %>
				</div>
				<div class="form-group">
					<%= f.text_field :prefix, :class => 'form-control', :placeholder => 'Prefijo' %>
				</div>
				<div class="form-group">
					<%= f.text_area :description, :class => 'form-control ckeditor' %>
				</div>						
				<div class="form-group">
					<%= f.button 'Agregar', {class: 'btn btn-info'} %>
				</div>
				<p id="response"></p>
			<% end %>
		</article>
	</div>
</section>